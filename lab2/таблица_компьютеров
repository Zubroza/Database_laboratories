CREATE TABLE tumunbayarovts02271.computers_table (
    computer_id INTEGER PRIMARY KEY,
    status VARCHAR(255) NOT NULL,
    model_id INTEGER NOT NULL,
    
    CONSTRAINT fk_model FOREIGN KEY (model_id) 
        REFERENCES tumunbayarovts02271.models_table (model_id)
        ON DELETE SET NULL
);

-- Комментарии к таблице и колонкам
COMMENT ON TABLE tumunbayarovts02271.computers_table 
    IS 'Таблица компьютеров с их статусами и моделями';

COMMENT ON COLUMN tumunbayarovts02271.computers_table.computer_id 
    IS 'Уникальный идентификатор компьютера';

COMMENT ON COLUMN tumunbayarovts02271.computers_table.status 
    IS 'Статус компьютера (работает, на ремонте и т.д.)';

COMMENT ON COLUMN tumunbayarovts02271.computers_table.model_id 
    IS 'Ссылка на модель компьютера';
